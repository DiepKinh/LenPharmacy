<div class=" home">
{{!-- Nhân viên --}}
            {{>menubarnv}}

         <div class="home-header-main">
                {{>header}}
            <div class="main-home-nv">
                <div class="title_chucnang">
                    <i class='fa fa-calendar-plus-o'></i>
                    <p>Tạo đơn hàng</p>
                </div>
               <div class="line" ></div>
               <div id="menu1" class="container tab-pane active div-table-list"><br />
                    <form action="">
                        <div class="card mb-4">
                            <div class="card-body">
                                <table class="table table-bordered" id="table_id">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Mã thuốc</th>
                                            <th>Tên thuốc</th>
                                            <th>Loại</th>
                                            <th>Ngày sản xuất</th>
                                            <th>Hạn sử dụng</th>
                                            <th>Số lượng tồn</th>
                                            <th>Nhập số lượng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                            {{#each array}}
                                        <tr>
                                            <td>{{sum @index 1}}</td>
                                            <td>{{this.idProduct}}</td>
                                            <td>{{this.name}}</td>
                                            <td>{{this.idCategory}}</td>
                                            <td>{{this.manufacturingDate}}</td>
                                            <td>{{this.expiryDate}}</td>
                                            <td>{{this.quality}}</td>
                                            <th><input type="text"></th>
                                            <td>
                                                <a href="/admin/xoachuyenvien/{{this.idUserTempCV}}" onclick="return confirm ('Xoá chuyên viên {{this.name}} ?')" class="btn btn-danger">Xóa</a>
                                                
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="div_btnTaoDon">
                            <input
                                type='submit'
                                class='button btnTaoDon'
                                value='TẠO ĐƠN HÀNG'
                            />
                        </div>
                    </form>
                </div>
            </div>
        </div>

 </div>
        
        
