<div class="adminthemnhanvien">
{{!-- Admin --}}
            {{>menubar}}
        <div class="home-header-main">
                {{>header}}
            <div class="main-home">
                <div class="title_chucnang">
                    <i class='fa fa-drivers-license-o'></i>
                    <p>Thêm mới nhân viên</p>
                </div>
                <div class="line" ></div>
                <div class="main_body">
                     <form action="/quanly/themnhanvien" method="POST">
                        <input  type="hidden" name="avatar" value='https://babycaredoan.s3.ap-southeast-1.amazonaws.com/test/logo_full.png'
                            class="form-control" >
                        <input  type="hidden" name="status" value=1
                            class="form-control" >
                    <div class="body_nhapkho">
                        <div class="header_nhapkho">
                            <p>THÔNG TIN NHÂN VIÊN</p>
                        </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="sel1">Tên đăng nhập vào hệ thống <span>(*)</span> :</label>
                                        <input  type="text" name="username" value=""
                                            class="form-control" placeholder="Tên đăng nhập > 6 kí tự">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="sel1">Họ và tên <span>(*)</span> : </label>
                                         <input  type="text" name="name" value=""
                                            class="form-control" placeholder="Nhập họ và tên nhân viên mới...">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="sel1">Ngày sinh <span>(*)</span> :</label>
                                        <input  type="date" name="dateOfBirth" value=""
                                            class="form-control" placeholder="Nhập tên ngày sinh nhân viên mới...">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="sel1">Giới tính <span>(*)</span> :</label>
                                        <select class="form-control" id="ChonGioiTinh" name="gender">
                                            <option value="Nữ">Nữ</option>
                                            <option value="Nam">Nam</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="sel1">Số điện thoại <span>(*)</span> : </label>
                                        <input  type="text" name="phoneNumber" value=""
                                            class="form-control" placeholder="Nhập số điện thoại nhân viên mới...">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="sel1">Email <span>(*)</span> : </label>
                                        <input  type="text" name="email" value=""
                                            class="form-control" placeholder="Nhập số email nhân viên mới...">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="sel1">Học hàm, học vị <span>(*)</span> : </label>
                                        <select class="form-control" id="ChonGioiTinh" name="position">
                                            <option value="Dược sĩ">Dược sĩ</option>
                                            <option value="Bác sĩ">Bác sĩ</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="sel1">Ngày bắt đầu làm việc tại LenPharmacy <span>(*)</span> : </label>
                                        <input  type="date" name="dateStartWork" value=""
                                            class="form-control" placeholder="Nhập số email nhân viên mới...">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="sel1">Địa chỉ <span>(*)</span> :</label>
                                        <input  type="text" name="address" value=""
                                            class="form-control" placeholder="Nhập số địa chỉ nhân viên mới...">
                                    </div>
                                </div>
                                
                            </div>
                             <div class='Error'>
                                {{#if messages.error}}
                                <p style='color:red'>
                                    {{messages.error}}
                                </p>
                                {{/if}}
                            </div>
                            <div class="div_btnLuu">
                                <input
                                    type='submit'
                                    class='button btnLuu'
                                    value='THÊM MỚI NHÂN VIÊN'
                                />
                            </div>
                    
                    </div>
                    
                </form>

                </div>
            </div>
        </div>
 </div>
        
        
        
<script>
    $(document).ready(function () {
        // hiển thị thông tin về các khoa
        function loadSanPham() {
            $.ajax({
                url: '/quanly/loaddanhmuc',
                type: 'get',
                dataType: 'json'
            }).done(function (result) {
                if (result.length > 0) {
                    for (let i = 0; i < result.length; i++) {

                        let themDanhMuc = `
                            <option value = "`+ result[i].idCategory + `">` + result[i].name + `</option>`;
                        $('#ChonDanhMuc').append(themDanhMuc);
                    }
                }
               

            });
        }
        loadSanPham();
    });
</script>
